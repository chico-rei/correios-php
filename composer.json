{
    "name": "chico-rei/correios-php",
    "type": "library",
    "description": "correios-php",
    "keywords": ["Correios Web Service", "Correios API"],
    "homepage": "https://github.com/chico-rei/correios-php",
    "license": "MIT",
    "authors": [{
        "name": "Chico Rei",
        "email": "php@chicorei.com.br"
    }],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.0||^7.0",
        "nesbot/carbon": "^1.16||^2.0",
        "cache/array-adapter": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "php-coveralls/php-coveralls": "^2.2",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "ChicoRei\\Packages\\Correios\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChicoRei\\Packages\\Correios\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs"
        ],
        "phpunit": "phpunit",
        "phpcs": "phpcs"
    }
}
